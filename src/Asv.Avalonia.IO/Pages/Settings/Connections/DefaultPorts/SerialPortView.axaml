<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:io="clr-namespace:Asv.Avalonia.IO"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Asv.Avalonia.IO.SerialPortView"
             x:DataType="io:SerialPortViewModel">
    <Design.DataContext>
        <io:SerialPortViewModel/>
    </Design.DataContext>
    <StackPanel Grid.IsSharedSizeScope="True" HorizontalAlignment="Stretch" Spacing="8" Margin="8">
        <DockPanel>
            <TextBlock Classes="h1" Text="Общие настройки"/>
            <Separator/>
        </DockPanel>
        <Grid Margin="20,0,0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition MinWidth="70" SharedSizeGroup="TitleGroup" Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition MinWidth="200" SharedSizeGroup="ValueGroup" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="5"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <avalonia:MaterialIcon Grid.Column="0" Grid.Row="0" Kind="Pencil"/>
            <TextBlock VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" Text="Title"/>
            <TextBox Grid.Column="4" Grid.Row="0" Text="{Binding Name.Value}"/>
            
            <avalonia:MaterialIcon Grid.Column="0" Grid.Row="2" Kind="SerialPort"/>
            <TextBlock VerticalAlignment="Center" Grid.Column="2" Grid.Row="2" Text="Path"/>
            <AutoCompleteBox Grid.Row="2" Grid.Column="4" ItemsSource="{Binding PortNames}"  Text="{Binding PortName.Value}"/>
        </Grid>
        <Button Command="{Binding SaveChangesCommand}">
            SaveChanges
        </Button>
    </StackPanel>
    
</UserControl>
