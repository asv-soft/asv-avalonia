<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:plugins="clr-namespace:Asv.Avalonia.Plugins"
             xmlns:avalonia1="clr-namespace:Asv.Avalonia;assembly=Asv.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1500" d:DesignHeight="450"
             x:Class="Asv.Avalonia.Plugins.InstalledPluginsPageView"
             x:DataType="plugins:InstalledPluginsPageViewModel">
    <Design.DataContext>
        <plugins:InstalledPluginsPageViewModel />
    </Design.DataContext>

    <Grid
        ColumnDefinitions="2*,5,3*"
        RowDefinitions="Auto,5,*">
        <DockPanel Margin="0 4 0 0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="4 0">
                <ToggleSwitch IsChecked="{Binding IsShowOnlyVerified.ViewValue.Value}"
                              OnContent=""
                              OffContent=""/>
                <TextBlock Text="{x:Static plugins:RS.PluginsMarketPageView_ToggleSwitch_OnlyVerified}" VerticalAlignment="Center"/>
            </StackPanel>
            <Button
                DockPanel.Dock="Right"
                Margin="4, 0, 0, 0"
                IsVisible="True"
                Theme="{DynamicResource TransparentButton}"
                Command="{Binding InstallManually}">
                <avalonia:MaterialIcon Kind="Add" />
            </Button>
            <avalonia1:SearchBoxView 
                Background="Transparent"
                CornerRadius="0"
                BorderThickness="0" 
                DataContext="{Binding Search}"
                Margin="4, 0, 0, 0"
                />
        </DockPanel>

        <Rectangle Grid.Column="0" Grid.Row="1" Fill="{DynamicResource ButtonBorderBrush}" Height="1"
                   HorizontalAlignment="Stretch" />
        <Rectangle Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Fill="{DynamicResource ButtonBorderBrush}" Width="1"
                   VerticalAlignment="Stretch" />
        <avalonia:MaterialIcon Grid.Row="0" Grid.RowSpan="3" Width="15" Height="15" Grid.Column="1"
                               Kind="UnfoldMoreVertical" Foreground="{DynamicResource ButtonBorderBrush}" />
        <ListBox 
            Margin="4" 
            Grid.Row="2" 
            Grid.Column="0" 
            ItemsSource="{Binding InstalledPluginsView}"
            SelectedItem="{Binding SelectedPlugin.Value}">
            <ListBox.Styles>
                <Style Selector="ListBoxItem">
                    <Setter Property="Padding" Value="4" />
                    <Setter Property="Margin" Value="0" />
                </Style>
            </ListBox.Styles>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="*,*">
                        <avalonia:MaterialIcon Margin="4" HorizontalAlignment="Left" Grid.RowSpan="2" Width="35"
                                               Height="35" Kind="Package" IsVisible="{Binding !IsContainsIcon}" />
                        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Source="{Binding Icon}" Height="35" Width="35"
                               Stretch="Uniform" Margin="10 5" IsVisible="{Binding IsContainsIcon}" />
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <TextBlock VerticalAlignment="Center" Theme="{DynamicResource BodyStrongTextBlockStyle}"
                                       Margin="0,0,4,0" Text="{Binding Name}" />
                            <Border IsVisible="{Binding IsUninstalled.ViewValue.Value}"
                                    CornerRadius="{DynamicResource ControlCornerRadius}" Padding="4,0" Margin="4 0 "
                                    Background="{DynamicResource AsvBackgroundWarningBrush}">
                                <TextBlock FontStyle="Italic" VerticalAlignment="Center"
                                           Theme="{DynamicResource CaptionTextBlockStyle}"
                                           Text="{x:Static plugins:RS.InstalledPluginsPageView_Uninstalled}" />
                            </Border>
                            <avalonia:MaterialIcon Height="15" Kind="Verified" Margin="5 0"
                                                   IsVisible="{Binding IsVerified}"
                                                   Foreground="{DynamicResource SystemAccentColorLight1}" />
                            <Border IsVisible="{Binding LoadingError, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    CornerRadius="{DynamicResource ControlCornerRadius}" Padding="4,0"
                                    Background="{DynamicResource AsvBackgroundErrorBrush}">
                                <TextBlock FontStyle="Italic" VerticalAlignment="Center"
                                           Theme="{DynamicResource CaptionTextBlockStyle}"
                                           Text="{x:Static plugins:RS.InstalledPluginsInfoDataTemplate_LoadingError_Text}" />
                            </Border>

                        </StackPanel>
                        <TextBlock Grid.Row="1" Grid.Column="1" Theme="{DynamicResource CaptionTextBlockStyle}"
                                   Foreground="{DynamicResource AccentTextFillColorDisabledBrush}"
                                   Text="{Binding Author}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Panel Margin="8" VerticalAlignment="Stretch" Grid.Row="0" Grid.RowSpan="3" Grid.Column="2">
            <Panel IsVisible="{Binding SelectedPlugin.Value, Converter={x:Static ObjectConverters.IsNotNull}}">
                <DockPanel DataContext="{Binding SelectedPlugin.Value}">
                    <Grid DockPanel.Dock="Top" RowDefinitions="35,25,50" ColumnDefinitions="120,*">
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                   Theme="{DynamicResource SubtitleTextBlockStyle}" Text="{Binding Name}" />
                        <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="1" Grid.Column="0"
                                    Grid.ColumnSpan="2">
                            <TextBlock Foreground="{DynamicResource AccentTextFillColorDisabledBrush}"
                                       Theme="{DynamicResource BodyTextBlockStyle}" Text="{Binding Author}" />
                        </StackPanel>
                        <TextBlock Grid.Row="2" Grid.Column="1" Theme="{DynamicResource BodyStrongTextBlockStyle}"
                                   Text="{Binding LocalVersion}" VerticalAlignment="Center" />
                        <Button IsEnabled="{Binding !IsUninstalled.ViewValue.Value}" Grid.Row="2" Grid.Column="0" Width="100"
                                Command="{Binding Uninstall}"
                                Content="{x:Static plugins:RS.InstalledPluginsPageView_Uninstall}" />
                    </Grid>
                    <avalonia1:InfoBar IsVisible="{Binding IsUninstalled.ViewValue.Value}" DockPanel.Dock="Top"
                                      Title="{x:Static plugins:RS.InstalledPluginsPageView_UninstalledMessageTitle}"
                                      IsOpen="True" IsIconVisible="True" Severity="Warning" IsClosable="False"
                                      Message="{x:Static plugins:RS.InstalledPluginsPageView_UninstalledMessage}">
                        <avalonia1:InfoBar.ActionButton>
                            <Button Command="{Binding CancelUninstall}"
                                    Content="{x:Static plugins:RS.InstalledPluginsPageView_CancelUninstall}" />
                        </avalonia1:InfoBar.ActionButton>
                    </avalonia1:InfoBar>
                    <avalonia1:InfoBar
                        IsVisible="{Binding LoadingError, Converter={x:Static ObjectConverters.IsNotNull}}"
                        DockPanel.Dock="Top" 
                        Title="{x:Static plugins:RS.InstalledPluginsPageView_InfoBarLoadingError_Title}" 
                        IsOpen="True" IsIconVisible="True" 
                        Severity="Error"
                        IsClosable="False"
                        Message="{Binding LoadingError}" />
                    <Border IsVisible="{Binding IsVerified}" DockPanel.Dock="Top" Padding="0,10,0,10">
                        <StackPanel Orientation="Horizontal">
                            <avalonia:MaterialIcon VerticalAlignment="Center" Height="15" Kind="Verified" Margin="5 0"
                                                   IsVisible="{Binding IsVerified}"
                                                   Foreground="{DynamicResource SystemAccentColorLight1}" />
                            <TextBlock VerticalAlignment="Center" Theme="{DynamicResource BodyTextBlockStyle}" Text="{x:Static plugins:RS.PluginsMarketPageView_InfoBar_IsVerified_Message}"/>
                        </StackPanel>    
                    </Border>
                    <TabControl>
                        <TabItem FontSize="18" Header="{x:Static plugins:RS.InstalledPluginsPageView_Tab_Description}">
                                <TextBlock Text="{Binding Description}" TextWrapping="WrapWithOverflow" />
                        </TabItem>
                        <TabItem FontSize="18" Header="{x:Static plugins:RS.InstalledPluginsPageView_Tab_AdditionalInfo}">
                            <ScrollViewer>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                                        <TextBlock Text="{x:Static plugins:RS.InstalledPluginsPageView_Tab_AdditionalInfo_Author}" FontWeight="Bold"/>
                                        <TextBlock Margin="6,0,0,0" TextWrapping="WrapWithOverflow" Text="{Binding Author}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                                        <TextBlock Text="{x:Static plugins:RS.InstalledPluginsPageView_Tab_AdditionalInfo_Source}" FontWeight="Bold"/>
                                        <TextBlock Margin="6,0,0,0" TextWrapping="WrapWithOverflow" Text="{Binding SourceName}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                                        <TextBlock Text="{x:Static plugins:RS.InstalledPluginsPageView_Tab_AdditionalInfo_Version}" FontWeight="Bold"/>
                                        <TextBlock Margin="6,0,0,0" TextWrapping="WrapWithOverflow" Text="{Binding LocalVersion}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </DockPanel>
            </Panel>
            <StackPanel IsVisible="{Binding SelectedPlugin.Value, Converter={x:Static ObjectConverters.IsNull}}"
                        HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="8">
                <avalonia:MaterialIcon Width="25" Height="25" Kind="ArrowLeft"
                                       Foreground="{DynamicResource ButtonForegroundDisabled}" />
                <TextBlock Foreground="{DynamicResource ButtonForegroundDisabled}" VerticalAlignment="Center"
                           FontSize="15" TextWrapping="WrapWithOverflow" MaxWidth="400"
                           Text="{x:Static plugins:RS.InstalledPluginsPageView_SelectedPluginIsNull}" />
            </StackPanel>
        </Panel>
    </Grid>
</UserControl>
