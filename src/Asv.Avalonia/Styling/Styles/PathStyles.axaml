        <Style Selector="^.info17">  <Setter Property="Fill" Value="{DynamicResource AsvBackgroundInfo17Brush}" />  <Setter Property="Stroke" Value="{DynamicResource AsvForegroundInfo17Brush}" />  </Style>
        <Style Selector="^.info18">  <Setter Property="Fill" Value="{DynamicResource AsvBackgroundInfo18Brush}" />  <Setter Property="Stroke" Value="{DynamicResource AsvForegroundInfo18Brush}" />  </Style>
