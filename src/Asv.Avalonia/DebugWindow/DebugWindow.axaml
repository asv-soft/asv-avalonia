<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonia="clr-namespace:Asv.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Asv.Avalonia.DebugWindow"
        Title="DebugWindow"
        x:DataType="avalonia:DebugWindowViewModel">
    <Design.DataContext>
        <avalonia:DebugWindowViewModel/>
    </Design.DataContext>
    <DockPanel>
        <ItemsControl DockPanel.Dock="Bottom" ItemsSource="{Binding SelectedControlPath.Value}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock >
                        <Run Text=" > "/>
                        <Run Text="{Binding}"/>
                    </TextBlock>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <ItemsControl ItemsSource="{Binding Pages}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Red" BorderThickness="1">
                        <DockPanel>
                            <TextBlock Text="{Binding Id}" DockPanel.Dock="Top"/>
                            <Grid ColumnDefinitions="*,*">
                                
                            </Grid>
                                
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>    
    </DockPanel>
    
    
</Window>
