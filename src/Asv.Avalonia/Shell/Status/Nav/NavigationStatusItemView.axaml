<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:avalonia="clr-namespace:Asv.Avalonia"
    xmlns:avalonia1="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="20"
    x:Class="Asv.Avalonia.NavigationStatusItemView"
    x:DataType="avalonia:NavigationStatusItemViewModel"
>
    <Design.DataContext>
        <avalonia:NavigationStatusItemViewModel />
    </Design.DataContext>
    <StackPanel Orientation="Horizontal" Spacing="8">
        <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="4" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <avalonia1:MaterialIcon
                            VerticalAlignment="Center"
                            Classes="smallest"
                            Kind="ChevronRight"
                        />
                        <TextBlock
                            VerticalAlignment="Center"
                            Classes="description"
                            Text="{Binding }"
                        />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock
            Classes="description"
            VerticalAlignment="Center"
            Text="|"
            IsVisible="{Binding !!CommandInfo}"
        />
        <TextBlock
            Text="{Binding CommandInfo.Name}"
            DockPanel.Dock="Right"
            IsVisible="{Binding !!CommandInfo}"
            VerticalAlignment="Center"
            Classes="description"
        />
        <TextBlock
            Classes="description"
            VerticalAlignment="Center"
            Text="{Binding CommandHotKey}"
            IsVisible="{Binding !!CommandHotKey}"
        />
    </StackPanel>
</UserControl>
