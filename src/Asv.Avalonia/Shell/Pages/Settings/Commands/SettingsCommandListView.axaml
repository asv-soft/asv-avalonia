<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:asv="clr-namespace:Asv.Avalonia"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
             x:DataType="asv:SettingsCommandListViewModel"
             x:Class="Asv.Avalonia.SettingsCommandListView">
    <Design.DataContext>
        <asv:SettingsCommandListViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <asv:CommandsSortingTypeLocalizationConverter x:Key="CommandsSortingTypeConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,Auto,*">
        <Grid Grid.Row="0" ColumnDefinitions="4*,*">
            <asv:SearchBoxView Grid.Column="0"
                               MaxHeight="40"
                               Margin="8"
                               DataContext="{Binding Search}"
                               VerticalContentAlignment="Center" />
            <Button Grid.Column="1"
                    MaxHeight="40"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Content="{x:Static asv:RS.SettingsCommandListView_ResetButton_Content}"
                    Command="{Binding ResetAllHotKeys}" />
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*,*">
            <ComboBox Grid.Column="0"
                      MaxHeight="40"
                      Margin="8"
                      ItemsSource="{Binding CommandSortingType.EnumItems}"
                      SelectedItem="{Binding CommandSortingType.ViewValue.Value, Mode=TwoWay}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource CommandsSortingTypeConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Items}"
                  Focusable="False"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  ColumnWidth="Auto"
                  CanUserResizeColumns="True"
                  SelectionMode="Single"
                  SelectedItem="{Binding SelectedItem.Value, Mode=TwoWay}">
            <DataGrid.Columns>
                <!-- Conflict indicator icon -->
                <DataGridTemplateColumn Width="40">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <avalonia:MaterialIcon Kind="AlertCircle"
                                                   Width="20" Height="20"
                                                   Foreground="{DynamicResource AsvForegroundWarningColor}"
                                                   IsVisible="{Binding HasConflict.Value}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Icon -->
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <avalonia:MaterialIcon Kind="{Binding Icon}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Command name -->
                <DataGridTemplateColumn Header="{x:Static asv:RS.SettingsCommandListView_DataGrid_Command_Header}"
                                        Width="*"
                                        CanUserSort="True"
                                        CustomSortComparer="{x:Static asv:CommandNameSortComparer.Instance}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <SelectableTextBlock SelectionStart="{Binding NameSelection.Start}"
                                                 SelectionEnd="{Binding NameSelection.Stop}"
                                                 Text="{Binding Name}"
                                                 VerticalAlignment="Center"
                                                 IsHitTestVisible="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Command description -->
                <DataGridTemplateColumn Header="{x:Static asv:RS.SettingsCommandListView_DataGrid_Description_Header}"
                                        Width="2*"
                                        CanUserSort="True"
                                        CustomSortComparer="{x:Static asv:CommandDescriptionSortComparer.Instance}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <SelectableTextBlock SelectionStart="{Binding DescriptionSelection.Start}"
                                                 SelectionEnd="{Binding DescriptionSelection.Stop}"
                                                 Text="{Binding Description}"
                                                 VerticalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- User hot‑key (editable) -->
                <DataGridTemplateColumn Header="{x:Static asv:RS.SettingsCommandListView_DataGrid_CustomHotKey_Header}"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <!-- Normal editable hotkey -->
                                <StackPanel Orientation="Horizontal"
                                            IsVisible="{CompiledBinding IsHotkeyConfigurable}">
                                    <Button VerticalAlignment="Center"
                                            Margin="0 0 5 0"
                                            Width="30" Height="30"
                                            Command="{Binding EditCommand}">
                                        <avalonia:MaterialIcon Kind="Pencil" />
                                    </Button>
                                    <TextBlock Text="{Binding EditedHotKey.ViewValue.Value}"
                                               VerticalAlignment="Center" />
                                </StackPanel>

                                <!-- Cannot edit -->
                                <Border HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="2"
                                        IsVisible="{CompiledBinding IsHotkeyConfigurable, Converter={x:Static BoolConverters.Not}}"
                                        Classes="diagonalStripe" />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Default hot‑key -->
                <DataGridTemplateColumn
                    Header="{x:Static asv:RS.SettingsCommandListView_DataGrid_DefaultHotKey_Header}"
                    Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <!-- Normal default hotkey -->
                                <TextBlock Text="{Binding DefaultHotKey}"
                                           IsVisible="{CompiledBinding IsHotkeyConfigurable}"
                                           VerticalAlignment="Center" />

                                <!-- Cannot edit -->
                                <Border HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="2"
                                        IsVisible="{CompiledBinding IsHotkeyConfigurable, Converter={x:Static BoolConverters.Not}}"
                                        Classes="diagonalStripe" />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Command source -->
                <DataGridTextColumn Header="{x:Static asv:RS.SettingsCommandListView_DataGrid_Source_Header}"
                                    Binding="{Binding Source}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>