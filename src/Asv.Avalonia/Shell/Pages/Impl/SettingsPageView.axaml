<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Asv.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Asv.Avalonia.SettingsPageView"
             x:DataType="avalonia:SettingsPage">
    <Design.DataContext>
        <avalonia:SettingsPage/>
    </Design.DataContext>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Command="{Binding History.Undo}">Undo</Button>
        <Button Command="{Binding History.Redo}">Redo</Button>
        
        <avalonia:ThemePropertyView DataContext="{Binding Theme}"/>    
    </StackPanel>
       
</UserControl>
