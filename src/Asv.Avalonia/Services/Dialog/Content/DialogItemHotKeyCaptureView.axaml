<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonia="clr-namespace:Asv.Avalonia"
             x:Class="Asv.Avalonia.DialogItemHotKeyCaptureView"
             x:DataType="avalonia:DialogItemHotKeyCaptureViewModel">
    <Design.DataContext>
        <avalonia:DialogItemHotKeyCaptureViewModel />
    </Design.DataContext>
    <StackPanel>
        <avalonia:HotKeyBox HotKey="{CompiledBinding HotKey.Value}" />
    </StackPanel>
</UserControl>
