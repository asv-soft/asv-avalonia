<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:example="clr-namespace:Asv.Avalonia.Example"
    xmlns:asv="clr-namespace:Asv.Avalonia;assembly=Asv.Avalonia"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:Class="Asv.Avalonia.Example.DialogControlsPageView"
    x:DataType="example:DialogControlsPageViewModel">
    <Design.DataContext>
        <example:DialogControlsPageViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <StyleInclude Source="avares://Asv.Avalonia.Example/Controls/ContentDialogMini/ContentDialogMini.axaml"/>
        <StyleInclude Source="avares://Asv.Avalonia.Example/Controls/Block/BlockStyles.axaml"/>
    </UserControl.Styles>

    <DockPanel Margin="12">
        <!-- Main header -->
        <Border DockPanel.Dock="Top" Classes="TitleBlockStyle">
            <StackPanel Spacing="6">
                <TextBlock
                    Classes="h1"
                    Text="{x:Static example:RS.DialogControlsPageViewModel_Title}"
                    FontSize="18"
                    FontWeight="SemiBold" />
                <TextBlock
                    Text="{x:Static example:RS.DialogControlsPageView_Description}"
                    Opacity="0.85" />
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" MinWidth="200"/>
                    <ColumnDefinition Width="*" MinWidth="120"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Custom dialog header -->
                    <RowDefinition Height="Auto"/> <!-- Custom dialog block -->
                    <RowDefinition Height="Auto"/> <!-- Ready dialog prefabs header -->
                    <RowDefinition Height="Auto"/> <!-- Custom dialogs header -->
                    <RowDefinition Height="Auto"/> <!-- Yes/no dialog -->
                    <RowDefinition Height="Auto"/> <!-- Save/cancel dialog -->
                    <RowDefinition Height="Auto"/> <!-- Input dialog -->
                    <RowDefinition Height="Auto"/> <!-- HotKey capture dialog -->
                    <RowDefinition Height="Auto"/> <!-- GeoPoint dialog -->
                    <RowDefinition Height="Auto"/> <!-- System dialogs header -->
                    <RowDefinition Height="Auto"/> <!-- Open file dialog -->
                    <RowDefinition Height="Auto"/> <!-- Save file dialog -->
                    <RowDefinition Height="Auto"/> <!-- Select folder dialog -->
                    <RowDefinition Height="Auto"/> <!-- Observe folder dialog -->
                </Grid.RowDefinitions>

                <!-- Custom dialog header -->
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Classes="TitleBlockStyle">
                    <StackPanel Spacing="6">
                        <TextBlock Classes="h2" Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Header}" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Description}"
                            Opacity="0.85"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!-- Custom dialog block -->
                <Border Grid.Row="1" Grid.Column="0" Classes="DialogBlockStyle">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Title}" />
                            <TextBox Text="{Binding CustomDialogTitle.ViewValue.Value, Mode=TwoWay}"/>
                            <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Content}" />
                            <TabControl>
                                <TabItem Header="{x:Static example:RS.DialogControlsPageView_ContentDialog_TextContent}"
                                         IsSelected="{Binding !IsCustomDialogImageContent.ViewValue.Value, Mode=TwoWay}">
                                    <TextBox
                                        Text="{Binding CustomDialogMessage.ViewValue.Value, Mode=TwoWay}"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap" />
                                </TabItem>
                                <TabItem Header="{x:Static example:RS.DialogControlsPageView_ContentDialog_ImageContent}"
                                         IsSelected="{Binding IsCustomDialogImageContent.ViewValue.Value, Mode=TwoWay}">
                                    <StackPanel Spacing="4" Orientation="Horizontal">
                                        <Button
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{Binding OpenImageForCustomDialogAsyncCommand}"
                                            Content="{x:Static example:RS.DialogControlsPageView_OpenFilePrefab_Title}" />
                                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock
                                                Text="{Binding CustomDialogImagePath.ViewValue.Value, Converter={x:Static example:PathToFileNameConverter.Instance}}"
                                                TextWrapping="Wrap"/>
                                            <TextBlock
                                                Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_ImageContent_Select}"
                                                IsVisible="{Binding CustomDialogImagePath.ViewValue.Value, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                                TextWrapping="Wrap"
                                                Foreground="Gray"/>
                                        </Grid>
                                    </StackPanel>
                                </TabItem>
                            </TabControl>
                            <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Buttons}" />
                            <Grid
                                ColumnDefinitions="*,*"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                ColumnSpacing="4">
                                <Grid ColumnDefinitions="Auto,7*" Grid.Column="0" ColumnSpacing="2">
                                    <CheckBox Grid.Column="0"
                                              HorizontalAlignment="Center"
                                              IsChecked="{Binding IsCustomDialogPrimaryButtonEnabled.ViewValue.Value, Mode=TwoWay}"/>
                                    <TextBox Grid.Column="1"
                                             IsEnabled="{Binding IsCustomDialogPrimaryButtonEnabled.ViewValue.Value}"
                                             Text="{Binding CustomDialogPrimaryButtonText.ViewValue.Value, Mode=TwoWay}" />
                                </Grid>

                                <Grid ColumnDefinitions="Auto,7*" Grid.Column="1" ColumnSpacing="2">
                                    <CheckBox Grid.Column="0"
                                              HorizontalAlignment="Center"
                                              IsChecked="{Binding IsCustomDialogSecondaryButtonEnabled.ViewValue.Value, Mode=TwoWay}"/>
                                    <TextBox Grid.Column="1"
                                             IsEnabled="{Binding IsCustomDialogSecondaryButtonEnabled.ViewValue.Value}"
                                             Text="{Binding CustomDialogSecondaryButtonText.ViewValue.Value, Mode=TwoWay}" />
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding ShowCustomDialogCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0 0 4 0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Open}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="1" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <example:ContentDialogMini DialogResult="{Binding CustomDialogResult.ViewValue.Value}"
                                                       Width="100" Height="100"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                                       IsImageContentType="{Binding IsCustomDialogImageContent.ViewValue.Value}"/>
                            <Button Command="{Binding ResetCustomResultCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Ready dialog prefabs header -->
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Classes="TitleBlockStyle">
                    <StackPanel Spacing="6">
                        <TextBlock Classes="h2" Text="{x:Static example:RS.DialogControlsPageView_Prefabs_Header}" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_Prefabs_Description}"
                            Opacity="0.85"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!-- Custom dialogs header -->
                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Classes="TitleBlockStyle">
                    <TextBlock Classes="h3" Text="{x:Static example:RS.DialogControlsPageView_Custom_Title}" />
                </Border>

                <!-- Yes/no dialog -->
                <Border Grid.Row="4" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_YesOrNoPrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_YesOrNoPrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="4" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding YesOrNoCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Open}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="4" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <example:BoolIndicator Value="{Binding YesOrNoDialogResult.ViewValue.Value, Converter={x:Static example:ConfirmationStatusToBoolConverter.Instance}}"
                                                       IconSize="40"/>
                            </StackPanel>
                            <Button Command="{Binding ResetYerOrNoCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Save/cancel dialog -->
                <Border Grid.Row="5" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_SavePrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_SavePrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="5" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding SaveCancelCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Open}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="5" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <example:BoolIndicator Value="{Binding SaveCancelDialogResult.ViewValue.Value, Converter={x:Static example:ConfirmationStatusToBoolConverter.Instance}}"
                                                       IconSize="40"/>
                            </StackPanel>
                            <Button Command="{Binding ResetSaveCancelResultCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Input dialog -->
                <Border Grid.Row="6" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_InputPrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_InputPrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="6" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding ShowInputCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Open}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="6" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <Border Classes="DialogBlockInnerStyle"  
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock
                                        Text="{Binding ShowInputDialogResult.ViewValue.Value}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Text="{x:Static example:RS.DialogControlsPageView_InputPrefab_Placeholder}"
                                        IsVisible="{Binding ShowInputDialogResult.ViewValue.Value, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                        TextWrapping="Wrap"
                                        Foreground="Gray"/>
                                </Grid>
                            </Border>
                            <Button Command="{Binding ResetShowInputResultCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- HotKey capture dialog -->
                <Border Grid.Row="7" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_HotKeyCapturePrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_HotKeyCapturePrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="7" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding ShowHotKeyCaptureCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Open}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="7" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <Border Classes="DialogBlockInnerStyle"  
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <asv:HotKeyBox MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Center"
                                               HotKey="{Binding ShowHotKeyCaptureDialogResult.ViewValue.Value, Converter={x:Static example:StringToHotKeyConverter.Instance}}" />
                            </Border>
                            <Button Command="{Binding ResetShowHotKeyResultCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- GeoPoint dialog -->
                <Border Grid.Row="8" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_GeoPointPrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_GeoPointPrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="8" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding OpenGeoPointDialogCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ContentDialog_Open}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="8" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <Border Classes="DialogBlockInnerStyle"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" ColumnSpacing="4" RowSpacing="4"
                                      HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <TextBlock Grid.Column="0" Grid.Row="0"
                                               Text="{x:Static asv:RS.Longitude_Name}"
                                               VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1" Grid.Row="0"
                                             Text="{Binding GeoPointDialogResult.Longitude.ViewValue.Value, Mode=TwoWay}" />
                                    <TextBlock Grid.Column="2" Grid.Row="0"
                                               Text="{Binding LonUnitName.Value}"
                                               VerticalAlignment="Center" />

                                    <TextBlock Grid.Column="0" Grid.Row="1"
                                               Text="{x:Static asv:RS.Latitude_Name}"
                                               VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1" Grid.Row="1"
                                             Text="{Binding GeoPointDialogResult.Latitude.ViewValue.Value, Mode=TwoWay}" />
                                    <TextBlock Grid.Column="2" Grid.Row="1"
                                               Text="{Binding LatUnitName.Value}"
                                               VerticalAlignment="Center" />

                                    <TextBlock Grid.Column="0" Grid.Row="2"
                                               Text="{x:Static asv:RS.Altitude_Name}"
                                               VerticalAlignment="Center" />
                                    <TextBox Grid.Column="1" Grid.Row="2"
                                             Text="{Binding GeoPointDialogResult.Altitude.ViewValue.Value, Mode=TwoWay}" />
                                    <TextBlock Grid.Column="2" Grid.Row="2"
                                               Text="{Binding AltUnitName.Value}"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </Border>
                            <Button Command="{Binding ResetOpenGeoPointResultCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- System dialogs header -->
                <Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Classes="TitleBlockStyle">
                    <StackPanel Spacing="6">
                        <TextBlock Classes="h3" Text="{x:Static example:RS.DialogControlsPageView_System_Title}" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_System_Note}"
                            TextWrapping="Wrap"
                            Opacity="0.75" />
                    </StackPanel>
                </Border>

                <!-- Open file dialog -->
                <Border Grid.Row="10" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_OpenFilePrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_OpenFilePrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="10" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding OpenFileCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_OpenFilePrefab_Title}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="10" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <Border Classes="DialogBlockInnerStyle"  
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock
                                        Text="{Binding OpenFileDialogResult.ViewValue.Value}"
                                        TextWrapping="Wrap"/>
                                    <TextBlock
                                        Text="/path/to/file.txt"
                                        IsVisible="{Binding OpenFileDialogResult.ViewValue.Value, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                        TextWrapping="Wrap"
                                        Foreground="Gray"/>
                                </Grid>
                            </Border>
                            <Button Command="{Binding ResetOpenFileCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Save file dialog -->
                <Border Grid.Row="11" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_SaveFilePrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_SaveFilePrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="11" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding SaveFileCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_SaveFilePrefab_Title}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="11" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <Border Classes="DialogBlockInnerStyle"  
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock
                                        Text="{Binding SaveFileDialogResult.ViewValue.Value}"
                                        TextWrapping="Wrap"/>
                                    <TextBlock
                                        Text="/path/to/file.txt"
                                        IsVisible="{Binding SaveFileDialogResult.ViewValue.Value, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                        TextWrapping="Wrap"
                                        Foreground="Gray"/>
                                </Grid>
                            </Border>
                            <Button Command="{Binding ResetSaveFileCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Select folder dialog -->
                <Border Grid.Row="12" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_SelectFolderPrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_SelectFolderPrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="12" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding SelectFolderCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_SelectFolderPrefab_Title}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="12" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <Border Classes="DialogBlockInnerStyle"  
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock
                                        Text="{Binding SelectFolderDialogResult.ViewValue.Value}"
                                        TextWrapping="Wrap"/>
                                    <TextBlock
                                        Text="/path/to/folder/"
                                        IsVisible="{Binding SelectFolderDialogResult.ViewValue.Value, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                        TextWrapping="Wrap"
                                        Foreground="Gray"/>
                                </Grid>
                            </Border>
                            <Button Command="{Binding ResetSelectFolderCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Observe folder dialog -->
                <Border Grid.Row="13" Grid.Column="0" Classes="DialogBlockStyle">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontWeight="SemiBold"
                            Text="{x:Static example:RS.DialogControlsPageView_ObserveFolderPrefab_Title}" 
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="{x:Static example:RS.DialogControlsPageView_ObserveFolderPrefab_Description}"
                            Opacity="0.8"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="13" Grid.Column="1" Classes="DialogBlockStyle">
                    <Button
                        Command="{Binding ObserveFolderCommand}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,0,4,0">
                        <TextBlock Text="{x:Static example:RS.DialogControlsPageView_ObserveFolderPrefab_Title}"
                                   TextWrapping="WrapWithOverflow" />
                    </Button>
                </Border>
                <Border Grid.Row="13" Grid.Column="2" Classes="DialogBlockStyle" VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <Grid ColumnDefinitions="*" RowDefinitions="*" MinWidth="140">
                            <Border Classes="DialogBlockInnerStyle"  
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock
                                        Text="{Binding ObserveFolderDialogResult.ViewValue.Value}"
                                        TextWrapping="Wrap"/>
                                    <TextBlock
                                        Text="{x:Static example:RS.DialogControlsPageView_ObserveFolderPrefab_PlaceHolder}"
                                        IsVisible="{Binding ObserveFolderDialogResult.ViewValue.Value, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                        TextWrapping="Wrap"
                                        Foreground="Gray"/>
                                </Grid>
                            </Border>
                            <Button Command="{Binding ResetObserveFolderCommand}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                                <avalonia:MaterialIcon Kind="Restore"/>
                            </Button>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>
