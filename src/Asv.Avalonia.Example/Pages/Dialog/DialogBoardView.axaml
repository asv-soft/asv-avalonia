<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Asv.Avalonia"
             xmlns:avalonia1="clr-namespace:Asv.Avalonia;assembly=Asv.Avalonia"
             xmlns:dialog="clr-namespace:Asv.Avalonia.Example.Pages.Dialog"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Asv.Avalonia.Example.Pages.Dialog.DialogBoardView"
             x:DataType="dialog:DialogBoardViewModel">
    <StackPanel Grid.IsSharedSizeScope="True" HorizontalAlignment="Stretch" Spacing="8" Margin="8">
        <DockPanel>
            <TextBlock 
                FontSize="{StaticResource HubHeaderThemeFontSize}" 
                Text="{x:Static avalonia1:RS.DialogPageVIewModel_Title}"
            />
            <Separator/>
        </DockPanel>
        <StackPanel Orientation="Vertical" Spacing="8" Margin="0,20,0,0">
            <Button Command="{Binding OpenFileMessage}"  Padding="0" Content="{x:Static avalonia1:RS.DialogButtonOpenFileDialog}"/>
            <Button Command="{Binding SaveFileMessage}"  Padding="0" Content="{x:Static avalonia1:RS.DialogButtonSaveFileDialog}"/>
            <Button Command="{Binding SelectFileMessage}"  Padding="0" Content="{x:Static avalonia1:RS.DialogButtonSelectFileDialog}"/>
            <Button Command="{Binding ObserveFolderMessage}"  Padding="0" Content="{x:Static avalonia1:RS.DialogButtonObserveFolderDialog}"/>
            <Button Command="{Binding YesNoMessage}"  Padding="0" Content="{x:Static avalonia1:RS.DialogButtonYesNoDialog}"/>
            <Button Command="{Binding SaveCancelMessage}"  Padding="0" Content="{x:Static avalonia1:RS.DialogButtonSaveCancelDialog}"/>
            <Button Command="{Binding ShowUnitInputMessage}"  Padding="0" Content="{x:Static avalonia1:RS.DialogButtonShowUnitInputDialog}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
