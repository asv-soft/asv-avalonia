<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:example="clr-namespace:Asv.Avalonia.Example">
    <Design.PreviewWith>
        <example:AboutExampleBlock />
    </Design.PreviewWith>
    
    <StyleInclude Source="avares://Asv.Avalonia.Example/Controls/Blocks/BaseExampleBlock.axaml"/>

    <Style Selector="example|AboutExampleBlock">
        <Setter Property="Template">
            <ControlTemplate>
                <example:BaseExampleBlock>
                    <example:BaseExampleBlock.Content>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                            <TextBlock
                                FontWeight="SemiBold"
                                Text="{Binding Title, RelativeSource={RelativeSource AncestorType=example:AboutExampleBlock}}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Text="{Binding Description, RelativeSource={RelativeSource AncestorType=example:AboutExampleBlock}}"
                                Opacity="0.8"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </example:BaseExampleBlock.Content>
                </example:BaseExampleBlock>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
