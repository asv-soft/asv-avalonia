<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Asv.Avalonia.Example">
    <Design.PreviewWith>
        <controls:BaseExampleBlock />
    </Design.PreviewWith>
    
    <Style Selector="Border.DialogBlockStyle">
        <Setter Property="Padding" Value="12, 20, 12, 20" />
        <Setter Property="Background" Value="{DynamicResource SystemControlFocusVisualSecondaryBrush}" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>
    
    <Style Selector="controls|BaseExampleBlock">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Classes="DialogBlockStyle">
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
